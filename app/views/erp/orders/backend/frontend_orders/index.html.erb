<% content_for :title do %>
    <%= t('.fontend_orders') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text"></i> <%= t('.fontend_orders') %>
<% end %>

<%= erp_datalist(
    url: erp_orders.list_backend_frontend_orders_path,
    keywords: [
        {
            text: t('.order_code'), name: 'erp_orders_fontend_orders.code'
        },
        {
            text: t('.creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> '+t('.set_confirm'),
            url: erp_orders.set_confirm_all_backend_frontend_orders_path,
            data_method: 'PUT',
            data_confirm: t('.set_confirm_confirm')
        },
        {
            text: '<i class="fa fa-check"></i> '+t('.set_finish'),
            url: erp_orders.set_finish_all_backend_frontend_orders_path,
            data_method: 'PUT',
            data_confirm: t('.set_finish_confirm')
        },
        {
            text: '<i class="fa fa-ban"></i> '+t('.set_cancel'),
            url: erp_orders.set_cancel_all_backend_frontend_orders_path,
            data_method: 'PUT',
            data_confirm: t('.set_cancel_confirm')
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_orders.delete_all_backend_frontend_orders_path,
            data_method: 'DELETE',
            data_confirm: t('.delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.draft'), name: 'status', value: Erp::Orders::FrontendOrder::STATUS_DRAFT, checked: true
        },
        {
            text: t('.confirmed'), name: 'status', value: Erp::Orders::FrontendOrder::STATUS_CONFIRMED, checked: false
        },
        {
            text: t('.finished'), name: 'status', value: Erp::Orders::FrontendOrder::STATUS_FINISHED, checked: false
        },
        {
            text: t('.cancelled'), name: 'status', value: Erp::Orders::FrontendOrder::STATUS_CANCELLED, checked: false
        }
    ],
    columns: [
        {
            text: t('.order_code'), name: 'order_code', value: true, checked: true
        },
        {
            text: t('.order_date'), name: 'order_date', value: true, checked: true
        },
        {
            text: t('.customer'), name: 'customer', value: true, checked: true
        },
        {
            text: t('.consignee'), name: 'consignee', value: true, checked: true
        },
        {
            text: t('.total'), name: 'total', value: true, checked: true
        },
        {
            text: t('.status'), name: 'status', value: true, checked: true
        }
    ]
) %>